<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.attendance_system.AttendanceReportController">
    <children>
        <ComboBox fx:id="courseBox" layoutX="20.0" layoutY="30.0" prefWidth="150.0"/>
        <DatePicker fx:id="datePicker" layoutX="200.0" layoutY="30.0" prefWidth="150.0"/>
        <Button fx:id="generateReportButton" layoutX="400.0" layoutY="30.0" mnemonicParsing="false" onAction="#generateReport" text="Generate Report"/>
        <TableView fx:id="attendanceTableView" layoutX="20.0" layoutY="100.0" prefHeight="400.0" prefWidth="760.0">
            <columns>
                <TableColumn text="UTD ID" fx:id="utdIdColumn"/>
                <TableColumn text="First Name" fx:id="firstNameColumn"/>
                <TableColumn text="Middle Name" fx:id="middleNameColumn"/>
                <TableColumn text="Last Name" fx:id="lastNameColumn"/>
                <TableColumn text="Student Status" fx:id="studentStatusColumn"/>
                <TableColumn text="Response 1" fx:id="response1Column"/>
                <TableColumn text="Response 2" fx:id="response2Column"/>
                <TableColumn text="Response 3" fx:id="response3Column"/>
                <TableColumn text="Class" fx:id="classIdColumn"/>
            </columns>
        </TableView>
        <Button fx:id="uploadButton" layoutX="700.0" layoutY="30.0" mnemonicParsing="false" text="Upload"/>
    </children>
</AnchorPane>

